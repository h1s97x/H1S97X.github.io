{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "hexo generate",
    "build:test": "hexo clean && hexo generate",
    "build:staging": "hexo clean && hexo generate --config _config.yml,_config.staging.yml",
    "clean": "hexo clean",
    "deploy": "hexo deploy",
    "deploy:safe": "node tools/safe-deploy.js",
    "deploy:preview": "node tools/safe-deploy.js --dry-run",
    "server": "hexo server",
    "server:staging": "hexo server --config _config.yml,_config.staging.yml",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-links": "node tools/check-links.js",
    "validate": "npm run test && npm run check-links",
    "precommit": "npm run validate",
    "prepare": "husky install",
    "setup:branches": "node tools/safe-branch-setup.js",
    "setup:preview": "node tools/safe-branch-setup.js --dry-run"
  },
  "hexo": {
    "version": "8.1.1"
  },
  "dependencies": {
    "dplayer": "^1.27.1",
    "hexo": "^8.1.1",
    "hexo-browsersync": "^0.3.0",
    "hexo-deployer-git": "^4.0.0",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-feed": "^3.0.0",
    "hexo-generator-index": "^4.0.0",
    "hexo-generator-searchdb": "^1.5.0",
    "hexo-generator-sitemap": "^3.0.1",
    "hexo-generator-tag": "^2.0.0",
    "hexo-hide-posts": "^0.4.3",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-jade": "^0.4.1",
    "hexo-renderer-marked": "^7.0.1",
    "hexo-renderer-pug": "^3.0.0",
    "hexo-renderer-stylus": "^3.0.1",
    "hexo-server": "^3.0.0",
    "hexo-tag-aplayer": "^3.0.4",
    "hexo-tag-dplayer": "^0.3.3",
    "hexo-theme-landscape": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "audit-ci": "^7.1.0",
    "eslint": "^9.39.2",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "tools/**/*.js",
      "!tools/check-links.js"
    ]
  },
  "lint-staged": {
    "*.{js,json}": [
      "eslint --fix"
    ]
  }
}
